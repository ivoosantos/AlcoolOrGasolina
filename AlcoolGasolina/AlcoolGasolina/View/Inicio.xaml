                <Image
                    Margin="0,0,0,220"
                    Source="logo_gas.png" 
                    WidthRequest="150"
                    AbsoluteLayout.LayoutBounds=".5,50,230,230"
                    AbsoluteLayout.LayoutFlags="XProportional"
                    Grid.Row="0"/>
            </StackLayout>
            <StackLayout
